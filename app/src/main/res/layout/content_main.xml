<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginEnd="127dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="27dp"
        android:background="#9C27B0"
        android:text="calculate the result"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="32dp"
        android:text="Enter Your number:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="230dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="59dp"
        android:text="Enter Percent:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#0C0A0A"
        android:gravity="center_horizontal"
        android:text="Calculator"
        android:textColor="#FFC107"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/btnCalculate"
        android:layout_marginStart="4dp"
        android:layout_marginTop="43dp"
        android:background="#E82E6D"
        android:gravity="center"
        android:text="Result"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edtEnterPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="enter percent ..."
        android:inputType="number|textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/edtEnterNumber"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtEnterPercent"
        android:layout_alignStart="@+id/edtEnterPercent"
        android:layout_below="@+id/edtEnterPercent"
        android:layout_marginEnd="-13dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="enter number"
        android:inputType="number|textPersonName"
        android:text="" />


</RelativeLayout>